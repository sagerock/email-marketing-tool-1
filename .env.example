# ===================================
# FRONTEND ENVIRONMENT VARIABLES
# (For Vercel deployment)
# ===================================

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# API URL (Railway backend)
VITE_API_URL=https://api.mail.sagerock.com

# ===================================
# BACKEND ENVIRONMENT VARIABLES
# (For Railway deployment)
# ===================================

# Base URL for unsubscribe links (your frontend URL)
BASE_URL=https://mail.sagerock.com

# Supabase Configuration (Backend)
VITE_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://mail.sagerock.com

# Salesforce OAuth (for direct Salesforce integration)
# Create a Connected App in Salesforce Setup > App Manager
SALESFORCE_CLIENT_ID=your-salesforce-consumer-key
SALESFORCE_CLIENT_SECRET=your-salesforce-consumer-secret
SALESFORCE_CALLBACK_URL=https://api.mail.sagerock.com/api/salesforce/callback

# ===================================
# LOCAL DEVELOPMENT
# ===================================

# For local development, create a .env file with:
# VITE_SUPABASE_URL=https://your-project.supabase.co
# VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
# SUPABASE_SERVICE_KEY=your-supabase-service-role-key
# VITE_API_URL=http://localhost:3001
# BASE_URL=http://localhost:5173
# PORT=3001
# NODE_ENV=development

# ===================================
# NOTES
# ===================================

# SendGrid API keys are stored in the database per client
# No need to add them here

# To get your Supabase keys:
# 1. Go to your Supabase project
# 2. Settings > API
# 3. Copy the URL and anon/service keys

# Railway will automatically set PORT
# Vercel will use build-time environment variables
